<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Classes</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        ul {
            list-style: none;
            padding: 0;
            text-align: center;
        }

        li {
            display: inline-block;
            margin: 10px;
            cursor: pointer;
        }

        a {
            text-decoration: none;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .folder-icon {
            font-size: 24px;
            margin-bottom: 5px;
        }
    </style>
</head>

<!-- Assuming you are using a template engine like EJS -->
<!-- cd.ejs -->
<!-- Assuming 'classList' contains objects with 'className' and 'subject' properties -->
<body>
    <h1><%= pageTitle %></h1>

    <ul>
        <li>
            
        <% if (mode === 'teacher') { %>
            <% for (let i = 0; i < classList.length; i++) { %>
                <li>
                    <form action="/views/class" method="get">
                        <input type="hidden" name="className" value="<%= classList[i].className %>">
                        <button type="submit" style="border: none; background: none; cursor: pointer;">
                            <i class="fas fa-folder folder-icon"></i>
                            <%= classList[i].div %>
                        </button>
                    </form>
                </li>
            <% } %>
            <li>
                <a href="/views/cda.ejs">
                    <i class="fas fa-folder folder-icon"></i>
                    Attendance
                </a>
            </li>
        <% } else if (mode === 'student') { %>
            <li>
                <a href="/views/cdms.ejs?subject=os">
                    <i class="fas fa-folder folder-icon"></i>
                    Operating Systems
                </a>
            </li>
            <li>
                <a href="/views/cdms.ejs?subject=math">
                    <i class="fas fa-folder folder-icon"></i>
                    Maths
                </a>
            </li>
            <li>
                <a href="/views/cdms.ejs?subject=dsa">
                    <i class="fas fa-folder folder-icon"></i>
                    DSA
                </a>
            </li>
            <li>
                <a href="/views/cdms.ejs?subject=adldco">
                    <i class="fas fa-folder folder-icon"></i>
                    ADLDCO
                </a>
            </li>
        <% } %>

        <form action="/logout.ejs" method="get">
            <button type="submit">Logout</button>
        </form>

        <form action="/views/reset.ejs" method="get">
            <button type="submit">Reset password</button>
        </form>
    </ul>
</body>





</html>