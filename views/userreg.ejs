<!-- views/signup.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <style>
        body {
            font-family: "Poppins", sans-serif;
            background-color: #000;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        form {
            position: relative;
            width: 400px;
            height: 500px;
            background: #000;
            box-shadow: 0 0 50px #0ef;
            border-radius: 20px;
            padding: 40px;
        }

        label {
            display: block;
            color: #fff;
            font-size: 25px;
            margin-top: 50px;
            margin-bottom: 22px;
            margin-left: 115px;
        }

        h1 {
            color: #fff;
            align-items: center;
            justify-content: center;
            margin-left: 150px;
        }

        input,
        select {
            width: 100%;
            padding: 15px;
            background-color: #fff;
            height: 50px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #0ef;
            border-radius: 10px;
        }

        button {
            background-color: #0ef;
            color: #000;
            padding: 10px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            width: 150px;
            margin-left: 138px;
            margin-top: 150px;
            font-size: 20px;
        }

        button:hover {
            background-color: #0ef;
        }
    </style>
</head>

<body>
    <form action="/register" method="post" enctype="multipart/form-data">
        <h1>Sign Up</h1>

        <label for="excelFile">Upload Excel File</label>
        <input type="file" id="excelFile" name="excelFile" accept=".xls, .xlsx" required>

        <button type="submit">Upload</button>
    </form>
</body>

</html>