<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Material Upload</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        ul {
            list-style: none;
            padding: 0;
            text-align: center;
        }

        li {
            display: inline-block;
            margin: 10px;
            cursor: pointer;
        }

        a {
            text-decoration: none;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .folder-icon {
            font-size: 24px;
            margin-bottom: 5px;
        }

        form {
            display: none;
            text-align: center;
        }

        #uploadLink:hover + form,
        form:hover {
            display: block;
        }

        .materials-list {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>

<body>
    <h1>Materials</h1>


    <div class="materials-list">
        <h2>Materials List</h2>
        <ul>
             <% for (let material of materials) { %>
                <li>
                    <% console.log("Material ID ") %>
                    <a href="/material/<%= material.d_id %>">
                        <i class="fas fa-file"></i>
                        <%= material.d_name %>
                    </a>
                </li>
            <% } %> 
        </ul>
    </div>
</body>

</html>
