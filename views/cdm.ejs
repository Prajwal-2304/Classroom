<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Material Upload</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(45deg, #3498db, #e74c3c); /* Gradient background */
            color: #fff; /* Text color */
            min-height: 100vh; /* Minimum height to cover the entire viewport */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        ul {
            list-style: none;
            padding: 0;
            text-align: center;
        }

        li {
            display: inline-block;
            margin: 10px;
            cursor: pointer;
        }

        a {
            text-decoration: none;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .folder-icon {
            font-size: 24px;
            margin-bottom: 5px;
        }

        form {
            display: none;
            text-align: center;
            margin-top: 20px;
            position: relative;
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1; /* Ensure the form appears above other elements */
        }

        li.active form {
            display: block;
        }

        .materials-list {
            text-align: center;
            margin-top: 20px;
            max-width: 600px; /* Limit the width of the materials list for better readability */
        }

        .materials-list ul {
            padding: 0;
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .materials-list li {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 10px;
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Hide overflowing content */
            position: relative;
        }

        .screen-icon {
            font-size: 48px;
            color: #2ecc71; /* Green color for the computer screen */
            margin-bottom: 10px;
        }

        .delete-button {
            cursor: pointer;
            margin-top: 5px;
            background-color: #e74c3c;
            color: #fff;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
        }

        .delete-button:hover {
            background-color: #c0392b;
        }
    </style>
</head>

<!-- Assuming materials is an array of objects with properties d_id, d_name, and sec -->
<body>
    <h1>Material Upload</h1>

    <ul>
        <li class="active">
            <a id="uploadLink" onclick="toggleForm()">
                <i class="fas fa-folder folder-icon"></i>
                Upload Materials
            </a>
            <form action="/upload_material" method="post" enctype="multipart/form-data">
                <label for="materialUpload">Select File:</label>
                <input type="file" name="materialUpload" id="materialUpload" accept=".pdf" required>

                <label for="fileName">File Name:</label>
                <input type="text" name="fileName" id="fileName" required>

                <label for="sec">Section/Chapter:</label>
                <input type="text" name="sec" id="sec" required>

                <button type="submit">Upload</button>
            </form>
        </li>
    </ul>

    <div class="materials-list">
        <h2>Materials List</h2>
        <% for (let sectionIndex in sections) { %>
            <% const section = sections[sectionIndex]; %>
            <div class="uploader-section">
                <hr>
                <h3><%= section.name %></h3>
                <% for (let material of section.materials) { %>
                    <div class="material-item">
                        <i class="fas fa-desktop screen-icon"></i>
                        <h4><%= material.d_name %></h4>
                        <button class="delete-button" onclick="deleteMaterial('<%= material.d_id %>')">Delete</button>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

    <script>
        function toggleForm() {
            const uploadLink = document.getElementById('uploadLink');
            const li = uploadLink.parentElement;
            li.classList.toggle('active');
        }

        function deleteMaterial(materialId) {
            if (confirm("Are you sure you want to delete this material?")) {
                fetch(`/delete_material/${materialId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    console.log('Material deleted:', data);
                    document.location.reload();
                })
                .catch(error => {
                    console.error('Error deleting material:', error);
                });
            }
        }
    </script>
</body>




</html>
